{
  "name": "journal-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "enzyme-to-json": "^3.5.0",
    "link-module-alias": "^1.2.0",
    "node-sass": "^4.14.1",
    "prop-types": "^15.7.2",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "yarn start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "npm run test -- --coverage --watchAll",
    "eject": "react-scripts eject",
    "branch-naming-check": "branch-naming-check \"^(master|develop)|(feature|bugfix|refactor|ci|hotfix|jira|issue|renovate)/[a-zA-Z0-9._-]+$\"",
    "postinstall": "link-module-alias"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@innocells/branch-naming-check": "^1.0.0",
    "@testing-library/react-hooks": "^3.4.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "6.5.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "husky": "^4.2.5",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run branch-naming-check && lint-staged",
      "post-push": "echo \"== Running Unit Tests ==\"; CI=true npm run test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "!**/index.js",
      "!**/node_modules/**",
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "_moduleAliases": {
    "~root": ".",
    "~hooks": "src/hooks/",
    "~helpers": "src/helpers/",
    "~routers": "src/routers/",
    "~auth": "src/auth/",
    "~types": "src/types/",
    "~data": "src/data/",
    "~selectors": "src/selectors/",
    "~components": "src/components/",
    "~ui": "src/components/ui"
  }
}
